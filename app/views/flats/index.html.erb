<h1>All our Flats</h1>
<div class="container">
<%@flats.each do |flat|%>
  <div class="card" style="width: 18rem;">
    <img class="card-img-top" src="https://picsum.photos/300/200" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title"><%= flat.name%></h5>
      <p class="card-text"><%=flat.description%></p>
      <a href="#" class="btn btn-primary">Go somewhere</a>
    </div>
  </div>
  <% end %>
</div>
